<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_height="match_parent"
    tools:context="com.nsc.nsc.Activities.ListOptionsActivity">

    <android.support.v7.widget.CardView
        android:layout_weight="1"
        android:layout_margin="3dp"
        android:id="@+id/cvContractor"
        app:cardBackgroundColor="#ffa500"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="8"
            >

            <ImageView
                android:id="@+id/ivCont"
                android:layout_width="154dp"
                android:layout_gravity="center"

                android:layout_height="wrap_content" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Contractors"
                android:textSize="35dp"
                android:gravity="center"
                android:layout_weight="5"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_margin="3dp"
        android:id="@+id/cvStock"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="8"
            >

            <ImageView
                android:id="@+id/ivStock"
                android:layout_gravity="center"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                 />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Stock"
                android:textSize="38dp"
                android:gravity="center"
                android:layout_weight="5"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_weight="1"
        android:layout_margin="3dp"
        android:id="@+id/cvSales"
        app:cardBackgroundColor="#ffff00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="8"
            >

            <ImageView
                android:id="@+id/ivSale"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_weight="1.05" />

            <TextView
                android:id="@+id/tvsst"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sales"
                android:textSize="38dp"
                android:gravity="center"
                android:layout_weight="5"
                />

        </LinearLayout>





    </android.support.v7.widget.CardView>



</LinearLayout>
