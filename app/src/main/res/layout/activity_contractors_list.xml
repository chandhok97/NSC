<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nsc.nsc.Activities.ContractorsListActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="LIST OF CONTRACTORS"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_weight="2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="9"
        android:weightSum="10"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/cvAnil"
            android:layout_margin="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANIL"
                android:textSize="40dp"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/cvDharampal"
            android:layout_margin="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DHARAMPAL"
                android:textSize="40dp"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/cvMohammad"
            android:layout_margin="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOHAMMAD"
                android:textSize="40dp"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/cvPinto"
            android:layout_weight="2"

            android:layout_margin="3dp"
            >

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="PINTO"
                android:textSize="40dp"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/cvVinod"
            android:layout_margin="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VINOD"
                android:textSize="40dp"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
