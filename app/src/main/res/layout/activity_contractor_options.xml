<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.nsc.nsc.Activities.StockActivity">

    <android.support.v7.widget.CardView
        android:layout_weight="1"
        android:layout_margin="3dp"
        android:id="@+id/cvAddtostock"
        app:cardBackgroundColor="#61EFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ADD TO STOCK"

            android:textSize="40dp"
            android:gravity="center"
            android:layout_gravity="center"

            />



    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_weight="1"

        android:layout_margin="3dp"
        android:id="@+id/cvAccount"
        app:cardBackgroundColor="#D6FF4B"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CONTRACTOR ACCOUNT"
            android:textSize="38dp"
            android:gravity="center"
            android:layout_gravity="center"

            />


    </android.support.v7.widget.CardView>
</LinearLayout>

